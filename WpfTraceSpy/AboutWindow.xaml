<Window
    x:Class="TraceSpy.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TraceSpy"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="About WPF TraceSpy"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid
        MinWidth="220"
        MinHeight="58"
        MaxWidth="220"
        Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center">
            WPF TraceSpy V4.0.0.2<LineBreak />
            Copyright (C) 2011-2021 Simon Mourier<LineBreak />
            All rights reserved.<LineBreak /></TextBlock>
        <Button
            Grid.Row="1"
            Width="230"
            BorderThickness="0"
            Click="Button_Click"
            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
            <Image
                Name="WB"
                Width="208"
                Height="58"
                Source="http://stackoverflow.com/users/flair/403671.png?theme=clean" />
        </Button>
    </Grid>
</Window>
